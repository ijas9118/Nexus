# Server Configuration
PORT= # Port number for the backend server (e.g., 3000)
CLIENT_URL= # Frontend client URL (e.g., http://localhost:5173)

# Database Configuration
MONGO_URI= # Your MongoDB connection string

# Redis Configuration
REDIS_HOST= # Redis Cloud host (e.g., redis-12345.c1.us-east-1-2.ec2.redns.redis-cloud.com)
REDIS_PORT= # Redis Cloud port (e.g., 12345)
REDIS_USERNAME= # Redis Cloud username (typically 'default')
REDIS_PASSWORD= # Redis Cloud password
REDIS_TLS= # Set to 'true' if TLS is required (optional, leave empty for non-TLS)

# Authentication Secrets
ACCESS_TOKEN_SECRET= # Secret key for access token (use a strong random string)
REFRESH_TOKEN_SECRET= # Secret key for refresh token (use a strong random string)

# Environment Mode
NODE_ENV= # Set to 'development' or 'production'

# Google OAuth Credentials
GOOGLE_CLIENT_ID= # Google OAuth Client ID
GOOGLE_CLIENT_SECRET= # Google OAuth Client Secret

# Email Configuration
USER_EMAIL= # Email used for sending system notifications
APP_PASSWORD= # App password or SMTP password for sending emails

# Stripe Configuration
STRIPE_SECRET_KEY= # Stripe secret key for handling payments
PLAN_MONTHLY_ID= # Monthly plan ID
PLAN_YEARLY_ID= # Monthly plan ID